doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Backlogger
        link(rel='stylesheet' type="text/css" href="./css/bulma.min.css")
        link(rel='stylesheet' type="text/css" href="./css/styles.css")
        script(src='./js/jquery.min.js')
        script(src='./js/library.js')
        script(defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js")
        script.
            $('html').addClass('hidden');
            $('document').ready(function() {
                $('html').removeClass('hidden');
            });
    body
        nav(class='navbar nav' role='navigation' aria-label='main navigation')
            div(class='navbar-brand')
                a(class='navbar-item is-large')
                    img(src='./images/logo-white.png' height='100' width='80')
                a(role='button' class='navbar-burger burger' aria-label='menu' aria-expanded='false' data-target='nav-menu')
                    span(hidden='true')
                    span(hidden='true')
                    span(hidden='true')
            div(id='nav-menu' class='navbar-menu')
                div(class='navbar-start')
                    a(class='navbar-item' href='/dashboard') Dashboard
                    a(class='navbar-item' href='/profile') Profile
                    a(class='navbar-item' href='/library') Library
                    div(class='navbar-item has-dropdown is-hoverable')
                        a(class='navbar-link') More 
                        div(class='navbar-dropdown')   
                            a(class='navbar-item') About 
                            a(class='navbar-item') Contact 
                            hr(class='navbar-divider')
                            a(class='navbar-item') Report an Issue
                div(class='navbar-end')
                    a(class='navbar-item' href='/auth/steam') Log In
        block content